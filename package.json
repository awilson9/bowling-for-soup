{
  "name": "bowling-for-soup",
  "version": "1.0.0",
  "type": "module",
  "bin": {
    "bowlingcalc": "./dist/cli/bowling-calc.js"
  },
  "scripts": {
    "cli:build": "tsup src/cli/bowling-calc.ts --format esm --outDir dist/cli",
    "cli:setup": "pnpm cli:build && pnpm link --global",
    "server:build": "tsup src/api/server.ts --format esm --outDir dist",
    "server:start": "node dist/server.js",
    "server:dev": "tsx --watch src/api/server.ts",
    "server:run": "pnpm server:build && pnpm server:start"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "fastify": "^5.6.2",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@types/lodash": "^4.17.21",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^25.0.1",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-unused-imports": "^4.2.0",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0"
  }
}
